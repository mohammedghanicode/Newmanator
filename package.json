{
  "name": "newmanator",
  "version": "1.0.0",
  "main": "electron-main.js",
  "description": "âš¡ Newmanator - Newman report collation tool with Desktop UI",
  "scripts": {
    "test": "vitest",
    "start": "electron .",
    "start:web": "node server.js",
    "dev": "nodemon server.js",
    "powershell": "powershell -ExecutionPolicy Bypass -File run-reporter.ps1",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "keywords": ["newman", "postman", "testing", "reports", "api", "collation", "electron"],
  "author": "Mohammed Ghani",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cheerio": "^1.1.2",
    "nodemailer": "^7.0.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vitest": "^3.2.4",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.newmanator.app",
    "productName": "Newmanator",
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "run-reporter.ps1",
      "process-files.js",
      "process-zip.js",
      "summarise.js",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraFiles": [
      {
        "from": "run-reporter.ps1",
        "to": "run-reporter.ps1"
      },
      {
        "from": "process-files.js",
        "to": "process-files.js"
      },
      {
        "from": "process-zip.js",
        "to": "process-zip.js"
      },
      {
        "from": "summarise.js",
        "to": "summarise.js"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohammedghanicode/Newmanator.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mohammedghanicode/Newmanator/issues"
  },
  "homepage": "https://github.com/mohammedghanicode/Newmanator#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
